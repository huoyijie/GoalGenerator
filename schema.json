{
  "$id": "https://raw.githubusercontent.com/huoyijie/GoalGenerator/master/schema.json",
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "GoalGenerator Schema",
  "description": "Define a model with CRUD required",
  "type": "object",
  "required": ["package", "name", "view", "fields"],
  "additionalProperties": false,
  "properties": {
    "package": {
      "type": "object",
      "description": "package",
      "additionalProperties": false,
      "required": ["value", "en"],
      "properties": {
        "value": {
          "type": "string",
          "description": "name of package"
        },
        "en": {
          "type": "string",
          "description": "translate to en"
        },
        "zh-CN": {
          "type": "string",
          "description": "translate to zh-CN"
        }
      }
    },
    "name": {
      "type": "object",
      "description": "model",
      "additionalProperties": false,
      "required": ["value", "en"],
      "properties": {
        "value": {
          "type": "string",
          "description": "name of model"
        },
        "en": {
          "type": "string",
          "description": "translate to en"
        },
        "zh-CN": {
          "type": "string",
          "description": "translate to zh-CN"
        }
      }
    },
    "database": {
      "type": "object",
      "description": "rules of database [embeddingbase,purge,tablename]",
      "additionalProperties": false,
      "properties": {
        "embeddingbase": {
          "type": "boolean",
          "description": "embedding base for (ID, CreatedAt, UpdateAt...)",
          "examples": [true]
        },
        "purge": {
          "type": "boolean",
          "description": "delete data permanently",
          "examples": [true]
        },
        "tablename": {
          "type": "string",
          "description": "custom name of the table",
          "examples": ["auth_users"]
        }
      }
    },
    "view": {
      "type": "object",
      "description": "rules of view [lazy,ctrl,icon]",
      "additionalProperties": false,
      "required": ["icon"],
      "properties": {
        "lazy": {
          "type": "boolean",
          "description": "lazy load for datatable pagination",
          "examples": [true]
        },
        "ctrl": {
          "type": "boolean",
          "description": "control which columns of datatable are displayed",
          "examples": [true]
        },
        "icon": {
          "type": "string",
          "description": "icon of menu",
          "examples": ["home"]
        }
      }
    },
    "fields": {
      "type": "array",
      "description": "fields of type",
      "minItems": 1,
      "items": {
        "type": "object",
        "description": "properties of field [name, database, view, validator]",
        "required": ["name", "view"],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "object",
            "description": "field",
            "additionalProperties": false,
            "required": ["value", "en"],
            "properties": {
              "value": {
                "type": "string",
                "description": "name of field"
              },
              "en": {
                "type": "string",
                "description": "translate to en"
              },
              "zh-CN": {
                "type": "string",
                "description": "translate to zh-CN"
              }
            }
          },
          "database": {
            "type": "object",
            "description": "rules of database [primarykey, unique, index]",
            "additionalProperties": false,
            "properties": {
              "primarykey": {
                "type": "boolean",
                "description": "field is a primary key",
                "examples": [true]
              },
              "unique": {
                "type": "boolean",
                "description": "field is unique",
                "examples": [true]
              },
              "index": {
                "type": "boolean",
                "description": "field is a index",
                "examples": [true]
              }
            }
          },
          "view": {
            "type": "object",
            "description": "rules of components [base, number, uuid, switch, text, password, dropdown, calendar, file, inline, multiselect]",
            "maxProperties": 2,
            "minProperties": 1,
            "additionalProperties": false,
            "properties": {
              "base": {
                "type": "object",
                "description": "base rules of component",
                "additionalProperties": false,
                "properties": {
                  "readonly": {
                    "type": "boolean",
                    "description": "field is readonly",
                    "examples": [true]
                  },
                  "postonly": {
                    "type": "boolean",
                    "description": "field is postonly",
                    "examples": [true]
                  },
                  "sortable": {
                    "type": "boolean",
                    "description": "field is sortable",
                    "examples": [true]
                  },
                  "asc": {
                    "type": "boolean",
                    "description": "presort asc",
                    "examples": [true]
                  },
                  "desc": {
                    "type": "boolean",
                    "description": "presort desc",
                    "examples": [true]
                  },
                  "globalsearch": {
                    "type": "boolean",
                    "description": "can global search this field",
                    "examples": [true]
                  },
                  "filter": {
                    "type": "boolean",
                    "description": "filter field",
                    "examples": [true]
                  },
                  "hidden": {
                    "type": "boolean",
                    "description": "field is hidden from datatable list",
                    "examples": [true]
                  },
                  "secret": {
                    "type": "boolean",
                    "description": "field is secret (such as a password)",
                    "examples": [true]
                  },
                  "autowired": {
                    "type": "boolean",
                    "description": "field is autowired",
                    "examples": [true]
                  }
                }
              },
              "uuid": {
                "type": "boolean",
                "description": "uuid",
                "examples": [true]
              },
              "text": {
                "type": "boolean",
                "description": "text",
                "examples": [true]
              },
              "switch": {
                "type": "boolean",
                "description": "switch",
                "examples": [true]
              },
              "password": {
                "type": "boolean",
                "description": "password",
                "examples": [true]
              },
              "number": {
                "type": "object",
                "description": "number",
                "additionalProperties": false,
                "properties": {
                  "showbuttons": {
                    "type": "boolean",
                    "description": "show buttons",
                    "examples": [true]
                  },
                  "uint": {
                    "type": "boolean",
                    "description": "uint",
                    "examples": [true]
                  },
                  "float": {
                    "type": "boolean",
                    "description": "float",
                    "examples": [true]
                  },
                  "min": {
                    "type": "integer",
                    "description": "min value",
                    "examples": [0]
                  },
                  "max": {
                    "type": "integer",
                    "description": "max value",
                    "examples": [100]
                  }
                }
              },
              "file": {
                "type": "object",
                "description": "file upload",
                "required": ["uploadto"],
                "additionalProperties": false,
                "properties": {
                  "uploadto": {
                    "type": "string",
                    "description": "file upload dir",
                    "examples": ["uploads"]
                  }
                }
              },
              "dropdown": {
                "type": "object",
                "description": "dropdown",
                "maxProperties": 1,
                "minProperties": 1,
                "additionalProperties": false,
                "properties": {
                  "option": {
                    "type": "object",
                    "description": "options of dropdown",
                    "maxProperties": 1,
                    "minProperties": 1,
                    "additionalProperties": false,
                    "properties": {
                      "dynamic": {
                        "type": "object",
                        "description": "options are dynamic",
                        "maxProperties": 1,
                        "minProperties": 1,
                        "additionalProperties": false,
                        "properties": {
                          "strings": {
                            "type": "boolean",
                            "description": "custom strings by code",
                            "examples": [true]
                          },
                          "ints": {
                            "type": "boolean",
                            "description": "custom ints by code",
                            "examples": [true]
                          },
                          "uints": {
                            "type": "boolean",
                            "description": "custom uints by code",
                            "examples": [true]
                          },
                          "floats": {
                            "type": "boolean",
                            "description": "custom floats by code",
                            "examples": [true]
                          }
                        }
                      },
                      "strings": {
                        "type": "array",
                        "description": "string options",
                        "items": {
                          "type": "object",
                          "description": "option",
                          "additionalProperties": false,
                          "required": ["value", "en"],
                          "properties": {
                            "value": {
                              "type": "string"
                            },
                            "en": {
                              "type": "string"
                            },
                            "zh-CN": {
                              "type": "string"
                            }
                          }
                        },
                        "minItems": 1
                      },
                      "ints": {
                        "type": "array",
                        "description": "int options",
                        "items": {
                          "type": "object",
                          "description": "option",
                          "additionalProperties": false,
                          "required": ["value", "en"],
                          "properties": {
                            "value": {
                              "type": "integer"
                            },
                            "en": {
                              "type": "string"
                            },
                            "zh-CN": {
                              "type": "string"
                            }
                          }
                        },
                        "minItems": 1
                      },
                      "uints": {
                        "type": "array",
                        "description": "uint options",
                        "items": {
                          "type": "object",
                          "description": "option",
                          "additionalProperties": false,
                          "required": ["value", "en"],
                          "properties": {
                            "value": {
                              "type": "integer",
                              "minimum": 0
                            },
                            "en": {
                              "type": "string"
                            },
                            "zh-CN": {
                              "type": "string"
                            }
                          }
                        },
                        "minItems": 1
                      },
                      "floats": {
                        "type": "array",
                        "description": "float options",
                        "items": {
                          "type": "object",
                          "description": "option",
                          "additionalProperties": false,
                          "required": ["value", "en"],
                          "properties": {
                            "value": {
                              "type": "number"
                            },
                            "en": {
                              "type": "string"
                            },
                            "zh-CN": {
                              "type": "string"
                            }
                          }
                        },
                        "minItems": 1
                      }
                    }
                  },
                  "belongto": {
                    "type": "object",
                    "description": "Belong To: belong to another model",
                    "required": ["name", "field"],
                    "maxProperties": 3,
                    "additionalProperties": false,
                    "properties": {
                      "pkg": {
                        "type": "string",
                        "description": "package of other model",
                        "examples": ["auth"]
                      },
                      "name": {
                        "type": "string",
                        "description": "name of other model",
                        "examples": ["User"]
                      },
                      "field": {
                        "type": "string",
                        "description": "field of other model",
                        "examples": ["Username"]
                      }
                    }
                  },
                  "hasone": {
                    "type": "object",
                    "description": "Has One: has another model",
                    "required": ["name", "field"],
                    "maxProperties": 3,
                    "additionalProperties": false,
                    "properties": {
                      "pkg": {
                        "type": "string",
                        "description": "package of other model",
                        "examples": ["country"]
                      },
                      "name": {
                        "type": "string",
                        "description": "name of other model",
                        "examples": ["Identify"]
                      },
                      "field": {
                        "type": "string",
                        "description": "field of other model",
                        "examples": ["NO"]
                      }
                    }
                  }
                }
              },
              "calendar": {
                "type": "object",
                "description": "calendar",
                "additionalProperties": false,
                "properties": {
                  "showtime": {
                    "type": "boolean",
                    "description": "show time",
                    "examples": [true]
                  },
                  "showicon": {
                    "type": "boolean",
                    "description": "show icon",
                    "examples": [true]
                  }
                }
              },
              "inline": {
                "type": "object",
                "description": "inline",
                "required": ["hasmany"],
                "additionalProperties": false,
                "properties": {
                  "hasmany": {
                    "type": "object",
                    "description": "Has Many: has many another models",
                    "required": ["name"],
                    "maxProperties": 2,
                    "additionalProperties": false,
                    "properties": {
                      "pkg": {
                        "type": "string",
                        "description": "package of other model",
                        "examples": ["auth"]
                      },
                      "name": {
                        "type": "string",
                        "description": "name of other model",
                        "examples": ["Role"]
                      }
                    }
                  }
                }
              },
              "multiselect": {
                "type": "object",
                "description": "multiselect",
                "required": ["many2many"],
                "additionalProperties": false,
                "properties": {
                  "many2many": {
                    "type": "object",
                    "description": "Many to Many: has many another models",
                    "required": ["name"],
                    "maxProperties": 2,
                    "additionalProperties": false,
                    "properties": {
                      "pkg": {
                        "type": "string",
                        "description": "package of other model",
                        "examples": ["auth"]
                      },
                      "name": {
                        "type": "string",
                        "description": "name of other model",
                        "examples": ["Role"]
                      }
                    }
                  }
                }
              }
            },
            "anyOf": [
              {
                "required": ["uuid"]
              },
              {
                "required": ["text"]
              },
              {
                "required": ["switch"]
              },
              {
                "required": ["password"]
              },
              {
                "required": ["number"]
              },
              {
                "required": ["file"]
              },
              {
                "required": ["dropdown"]
              },
              {
                "required": ["calendar"]
              },
              {
                "required": ["inline"]
              },
              {
                "required": ["multiselect"]
              }
            ]
          },
          "validator": {
            "type": "object",
            "description": "rules of validator [required, email, alphanum, alpha, min, max, len]",
            "additionalProperties": false,
            "properties": {
              "required": {
                "type": "boolean",
                "description": "field is required",
                "examples": [true]
              },
              "email": {
                "type": "boolean",
                "description": "field is a email",
                "examples": [true]
              },
              "alphanum": {
                "type": "boolean",
                "description": "field only contains alpha or number",
                "examples": [true]
              },
              "alpha": {
                "type": "boolean",
                "description": "field only contains alpha",
                "examples": [true]
              },
              "min": {
                "type": "integer",
                "minimum": 0,
                "description": "minimum value of number or length of string",
                "examples": [0]
              },
              "max": {
                "type": "integer",
                "exclusiveMinimum": 0,
                "description": "maximum value of number or length of string",
                "examples": [100]
              },
              "len": {
                "type": "integer",
                "exclusiveMinimum": 0,
                "description": "length of string",
                "examples": [20]
              }
            }
          }
        }
      }
    }
  }
}